{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2022",
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "strict": false
    },
    "include": [
        "backend/**/*",
        "types.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}